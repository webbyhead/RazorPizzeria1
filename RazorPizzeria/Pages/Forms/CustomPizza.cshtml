@page
@model RazorPizzeria.Pages.Forms.CustomPizzaModel
@{
}

<div class="text-center container">
    <h1>Create your own Pizza!!!</h1>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 alert-light col-4">

        <input type="text" asp-for="Pizza.PizzaName" placeholder="Give your pizza a name.."/>
        <br/>
        <input type="checkbox" asp-for="Pizza.TomatoSauce" placeholder="Tomato Sc."/>Tomato Sau.
        <br/>
        <input type="checkbox" asp-for="Pizza.Cheese" placeholder="CHese"/>Cheese
        <br/>
        <input type="checkbox" asp-for="Pizza.Peperoni" placeholder="Pep"/>Pepper
        <br/>
        <input type="checkbox" asp-for="Pizza.Ham" placeholder="Hm"/>Ham
        <br/>
        <input type="checkbox" asp-for="Pizza.Mushroom" placeholder="Msh"/>Mush
        <br/>
        <input type="checkbox" asp-for="Pizza.Tuna" placeholder="Tuna"/>Tun
        <br/>
        <input type="checkbox" asp-for="Pizza.Beef" placeholder="Bef"/>Beef
        <br/>
        <input type="checkbox" asp-for="Pizza.Pineapple" placeholder="Pin"/>Pine
        <br/>
        

        <button class="btn btn-primary mt-1" type="submit">Order My Pizza</button>

    </form>


</div>